<% provide :title, @user.fullname %>
<div class = "well well-small">
  <div class = "row-fluid">
    <div class="span5">
      <%= image_tag("user-icon.png") %>
    </div>
    <div class="span7">
      <h3><%= @user.fullname %></h3>
      <hr class="soft"/>
      <% if current_user? @user %>
        <%= link_to t(".edit"), edit_user_path(current_user) %>
      <% end %>
    </div>
  </div>
</div>
